<div class= "panel panel-default">
  <div class="panel-body">

    <div class="star-rating" data-score= <%= @avg_review %></div>
    <em><%= "#{@reviews.length} reviews" %></em>

    <div class="row">
      <div class="col-md-4">
        <%= image_tag @movie.image.url(:medium)%>


        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td> <strong>Title:</strong> </td>
                <td> <%= @movie.title %> </td>
              </tr>
                <tr>
                <td> <strong>Bro Score:</strong>
                <td> <%= @movie.bro_score %> </td>
              </tr>
              <tr>
                <td> <strong>Actors:</strong> </td>
                <td> <%= @movie.actors %></td>
              </tr>
              <tr>
                <td> <strong>Director:</strong> </td>
                <td> <%= @movie.director %> </td>
              </tr>
              <tr>
                <td> <strong>Description:</strong> </td>
                <td> <%= @movie.description %> </td>
              </tr>
            </tbody>
          </table>
          <%= link_to "Hey you.. write a Review!", new_movie_review_path(@movie) %>
        </div>
      </div>
       <div class="col-md-7 col-md-offset-1">
         <h1 class="review_title"> <%= @movie.title %> </h1>
         <p> <%= @movie.description %> </p>

         <% if @reviews.blank? %>
           <h3>Why nobody had reviewed this? You do it?</h3>
           <%= link_to "Write a Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
           <% else %>
           <% @reviews.each do |review| %>
             <div class="reviews">
               <div class="star-rating" data-score= <%=review.rating %> </div>
               <p> <%= review.comment %> </p>
             </div>
             <% end %>
             <% end %>
       </div>
    </div>
  </div>
</div>


<%= link_to 'Edit', edit_movie_path(@movie) %> |
<%= link_to 'Back', movies_path %>

<script>

$('.star-rating').raty({
  number: 10,
  path: '/assets/',
  readOnly: true,
  score: function() {
    return $(this).attr('data-score');
  }
  });

</script>
