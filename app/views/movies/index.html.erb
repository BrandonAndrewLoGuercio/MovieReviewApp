<% if !user_signed_in? %>
<div class= "jumbotron" >
 <h1>Movies We Watched</h1>
 <p>If you're my bro, sign up ok?</p>
 <p> <%= link_to "Click here Bro Montana", new_user_registration_path, class: "btn btn-primary btn-lg" %> </p>
</div>
<% end %>
<div class="row">
  <% @movies.each do |movie, title, year| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <strong><%=movie.title%></strong> [<%=movie.bro_score%>]

        <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
      </div>
    </div>
  <% end %>
</div>
